<div class="container px-5 px-sm-0">
 <% if book.errors.any? %>
  <h3><%= ActionController::Base.helpers.pluralize(book.errors.count, 'error') %> prohibited this obj from being saved:</h3>
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 <div class="row">
<div class="col-md-3">
   <h2>User info</h2>
    <table class="table">
    <%= image_tag user.get_profile_image(100,100) %>
    <tbody>
    <tr></tr>
    <tr>
    <th>name</th><th><%= user.name %></th>
    </tr>
    <tr>
    <th>introduction</th><th><%= user.introduction %></th>
    </tr>
    </tbody>
    </table>
    <div>
    <%=link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
     <i class="fa-solid fa-user-gear"></i>
    <% end %>
    </div>
    
    <h2 class="mt-3">New book</h2>
    <div>
    <%= form_with model: book, url: books_path do |f| %>
     
    <div class="form-group"> 
    <%=f.label :title, "Title"%><br>
    <%= f.text_field :title, class: "form-control" %>
    </div>
    
    <div>
    <%= f.label :body, "Opinion" %><br>
    <%= f.text_area :body, class: "form-control" %>
   </div>
    
   <div class="mt-3">
   <%= f.submit 'Create Book', class: "btn btn-success" %>
   </div>
   <% end %>
  </div>
 </div>
