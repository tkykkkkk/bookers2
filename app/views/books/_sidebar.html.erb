<div class="container px-5 px-sm-0">
 <% if book.errors.any? %>
  <h3><%= ActionController::Base.helpers.pluralize(book.errors.count, 'error') %> prohibited this obj from being saved:</h3>
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 <div class="row">
<div class="col-md-3">
   <h2>User info</h2>
    <table class="table">
    <%= image_tag user.get_profile_image(100,100) %>
    <tbody>
    <tr></tr>
    <tr>
    <th>name</th><th><%= user.name %></th>
    </tr>
    <tr>
    <th>introduction</th><th><%= user.introduction %></th>
    </tr>
    <tr>
    <th>Follows</th>
      <td>
        <%= link_to follows_user_path(user) do %>
          <h6><%= user.followers.count %></h6>
        <% end %> 
      </td>
      </tr>
      <tr>  
        <th>Followers</th>
        <td>  
          <%= link_to followers_user_path(user) do %>
            <h6><%= user.followeds.count %></h6>
          <% end %>
        </td>
      </tr> 
    </tbody>
    </table>
    <div>
     <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info"%>
         <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
         <% end %>
      <% else %>
        <%=link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    <% end %>
    </div>
    
    <h2 class="mt-3">New book</h2>
    <div>
    <%= form_with model: book, url: books_path do |f| %>
     
    <div class="form-group"> 
    <%=f.label :title, "Title"%><br>
    <%= f.text_field :title, class: "form-control" %>
    </div>
    
    <div>
    <%= f.label :body, "Opinion" %><br>
    <%= f.text_area :body, class: "form-control" %>
   </div>
    
   <div class="mt-3">
   <%= f.submit 'Create Book', class: "btn btn-success" %>
   </div>
   <% end %>
  </div>
 </div>
