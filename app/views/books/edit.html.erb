<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>Editing Book</h1>
             <% if @book.errors.any? %>
             <h3><%= ActionController::Base.helpers.pluralize(@book.errors.count, 'error') %> prohibited this obj from being saved:</h3>
             <ul>
             <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
             <% end %>
             </ul>
             <% end %>
            
            <%=form_with model: @book do |f| %>
            <div class="form-group">
            <label for ="inputeBook">Title</label><br>
            <%= f.text_field :title, autofocus: true, id:"inputeBook", placeholder:"Title", class: "form-control"%>
            </div>
            <div class="form-group">
            <label for ="inputebody">Opinion</label><br>
            <%= f.text_area :body, autofocus: true, id:"inputebody", placeholder:"Opinion", class: "form-control"%>
            </div>
            <div class="form-group">
            <%= f.submit "Update Book", class: "btn btn-success" %>
            </div>
            <% end %>
             <%= link_to "Show", book_path(@book) %>
             |
             <%= link_to "Back", books_path %>
        </div>
       
        
    </div>
</div>