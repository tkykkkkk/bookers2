<% if users.exists? %>
<% users.each do |user| %>
 <table>
     <thead>
         <tr>
             <th>image</th>
             <th>name</th>
             <th></th>
             <th colspan="4"></th>
         </tr>
     </thead>
     <tbody>
         <tr>
             <td><%= image_tag user.get_profile_image(50,50) %></td>
             <td><%= user.name %></td>
             <td>フォロー数: <%= user.followings.count %></td>
             <td>フォロワー数: <%= user.followings.count %></td>
         </tr>
     </tbody>
 </table>
 <% end %>
 <% else %>
 <h2>ユーザーはいません</h2>
 <% end %>



<% if current_user.following?(user) %>
<%= link_to "フォローを外す", user_relationship_path(user.id), class: "btn btn-info"%>
<% else %>
<%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-success" %>
<% end %>